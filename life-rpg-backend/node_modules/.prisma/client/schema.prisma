generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  tasks  Task[]
  habits Habit[]
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String
  xp        Int
  completed Boolean @default(false)
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}

model Habit {
  id     Int    @id @default(autoincrement())
  title  String
  streak Int    @default(0)
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
